{
  "$id": "text-case-converter.schema.json",
  "type": "object",
  "properties": {
    "text": {
      "type": "string",
      "minLength": 1,
      "errorMessage": "Inserisci il testo da convertire"
    },
    "mode": {
      "type": "string",
      "enum": ["upper", "lower", "title", "sentence"],
      "default": "upper"
    }
  },
  "required": ["text"],
  "additionalProperties": false
}


