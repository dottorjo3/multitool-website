{
  "$id": "ai-response-rater.schema.json",
  "type": "object",
  "properties": {
    "rubricCriteria": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 2
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "ratingScale": {
      "type": "string",
      "minLength": 1,
      "default": "1-5"
    },
    "reviewCadence": {
      "type": "string",
      "enum": [
        "daily",
        "weekly",
        "monthly"
      ],
      "default": "weekly"
    }
  },
  "additionalProperties": false
}









