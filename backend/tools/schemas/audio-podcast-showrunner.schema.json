{
  "$id": "audio-podcast-showrunner.schema.json",
  "type": "object",
  "properties": {
    "episodeLength": {
      "type": "integer",
      "minimum": 5,
      "maximum": 180,
      "default": 30
    },
    "releaseFrequency": {
      "type": "string",
      "enum": [
        "weekly",
        "biweekly",
        "monthly"
      ],
      "default": "weekly"
    },
    "teamSize": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10,
      "default": 3
    }
  },
  "additionalProperties": false
}
{
  "$id": "audio-podcast-showrunner.schema.json",
  "type": "object",
  "properties": {
    "format": {
      "type": "string",
      "enum": [
        "interview",
        "roundtable",
        "solo",
        "narrative"
      ],
      "default": "interview"
    },
    "episodeLength": {
      "type": "integer",
      "minimum": 10,
      "maximum": 120,
      "default": 35
    },
    "seasonEpisodes": {
      "type": "integer",
      "minimum": 4,
      "maximum": 30,
      "default": 8
    }
  },
  "additionalProperties": false
}

