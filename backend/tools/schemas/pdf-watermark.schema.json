{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PdfWatermarkSchema",
  "type": "object",
  "properties": {
    "text": {
      "type": "string",
      "minLength": 1
    },
    "opacity": {
      "type": "number",
      "minimum": 0.05,
      "maximum": 1,
      "default": 0.2
    },
    "fontSize": {
      "type": "integer",
      "minimum": 12,
      "maximum": 120,
      "default": 48
    }
  },
  "required": ["text"],
  "additionalProperties": false
}

