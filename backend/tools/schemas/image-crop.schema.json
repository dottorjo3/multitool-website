{
  "$id": "image-crop.schema.json",
  "type": "object",
  "properties": {
    "left": {
      "type": ["integer", "string"],
      "pattern": "^[0-9]{1,5}$",
      "default": "0"
    },
    "top": {
      "type": ["integer", "string"],
      "pattern": "^[0-9]{1,5}$",
      "default": "0"
    },
    "width": {
      "type": ["integer", "string"],
      "pattern": "^[0-9]{1,5}$",
      "errorMessage": "Inserisci la larghezza dell’area da ritagliare"
    },
    "height": {
      "type": ["integer", "string"],
      "pattern": "^[0-9]{1,5}$",
      "errorMessage": "Inserisci l’altezza dell’area da ritagliare"
    }
  },
  "required": ["width", "height"],
  "additionalProperties": false
}


