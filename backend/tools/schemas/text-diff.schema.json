{
  "$id": "text-diff.schema.json",
  "type": "object",
  "properties": {
    "text1": {
      "type": "string",
      "minLength": 1,
      "errorMessage": "Inserisci il primo testo"
    },
    "text2": {
      "type": "string",
      "minLength": 1,
      "errorMessage": "Inserisci il secondo testo"
