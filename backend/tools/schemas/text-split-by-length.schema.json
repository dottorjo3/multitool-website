{
  "$id": "text-split-by-length.schema.json",
  "type": "object",
  "properties": {
    "input": {
      "type": "string",
      "minLength": 1,
      "errorMessage": "Inserisci del testo da suddividere"
    },
    "length": {
      "type": "string",
      "pattern": "^[1-9][0-9]*$",
      "default": "100"
    }
  },
  "required": ["input"],
  "additionalProperties": false
}

