{
  "$id": "text-extract-numbers.schema.json",
  "type": "object",
  "properties": {
    "input": {
      "type": "string",
      "minLength": 1,
      "errorMessage": "Inserisci del testo da cui estrarre i numeri"
    },
    "includeDecimals": {
      "type": "string",
      "enum": ["true", "false"],
      "default": "true"
    },
    "includeNegative": {
      "type": "string",
      "enum": ["true", "false"],
      "default": "true"
    }
  },
  "required": ["input"],
  "additionalProperties": false
}

