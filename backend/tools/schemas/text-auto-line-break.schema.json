{
  "$id": "text-auto-line-break.schema.json",
  "type": "object",
  "properties": {
    "input": {
      "type": "string",
      "minLength": 1,
      "errorMessage": "Inserisci del testo da formattare"
    },
    "maxLength": {
      "type": "string",
      "pattern": "^[1-9][0-9]*$",
      "default": "80"
    }
  },
  "required": ["input"],
  "additionalProperties": false
}

