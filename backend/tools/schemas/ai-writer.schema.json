{
  "$id": "ai-writer.schema.json",
  "type": "object",
  "properties": {
    "topic": {
      "type": "string",
      "minLength": 4,
      "errorMessage": "Inserisci un argomento (almeno 4 caratteri)"
    },
    "tone": {
      "type": "string",
      "enum": ["balanced", "friendly", "professional", "persuasive"],
      "default": "balanced"
    },
    "temperature": {
      "type": ["number", "string"],
      "minimum": 0,
      "maximum": 1,
      "default": 0.7
    }
  },
  "required": ["topic"],
  "additionalProperties": false
}

