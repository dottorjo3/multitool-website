{
  "$id": "developer-html-minifier.schema.json",
  "type": "object",
  "properties": {
    "input": {
      "type": "string",
      "minLength": 1,
      "errorMessage": "Inserisci del codice HTML da minificare"
    },
    "removeComments": {
      "type": "string",
      "enum": ["true", "false"],
      "default": "true"
    },
    "collapseWhitespace": {
      "type": "string",
      "enum": ["true", "false"],
      "default": "true"
    },
    "minifyCSS": {
      "type": "string",
      "enum": ["true", "false"],
      "default": "false"
    },
    "minifyJS": {
      "type": "string",
      "enum": ["true", "false"],
      "default": "false"
    }
  },
  "required": ["input"],
  "additionalProperties": false
}


