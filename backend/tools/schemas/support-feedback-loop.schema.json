{
  "$id": "support-feedback-loop.schema.json",
  "type": "object",
  "properties": {
    "feedbackSources": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 2
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "processingCadence": {
      "type": "string",
      "enum": [
        "weekly",
        "biweekly",
        "monthly"
      ],
      "default": "biweekly"
    },
    "routingDestinations": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 2
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "additionalProperties": false
}






