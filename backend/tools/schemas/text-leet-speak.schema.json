{
  "$id": "text-leet-speak.schema.json",
  "type": "object",
  "properties": {
    "input": {
      "type": "string",
      "minLength": 1,
      "errorMessage": "Inserisci del testo da convertire"
    },
    "level": {
      "type": "string",
      "enum": ["low", "medium", "high", "extreme"],
      "default": "medium"
    },
    "mode": {
      "type": "string",
      "enum": ["encode", "decode"],
      "default": "encode"
    }
  },
  "required": ["input"],
  "additionalProperties": false
}

