{
  "$id": "ai-seo-snippet-optimizer.schema.json",
  "type": "object",
  "properties": {
    "locale": {
      "type": "string",
      "minLength": 2,
      "default": "en-US"
    },
    "targetLengthTitle": {
      "type": "integer",
      "minimum": 30,
      "maximum": 90,
      "default": 60
    },
    "targetLengthDescription": {
      "type": "integer",
      "minimum": 90,
      "maximum": 200,
      "default": 155
    },
    "includeFAQ": {
      "type": "boolean",
      "default": true
    }
  },
  "additionalProperties": false
}









