{
  "$id": "cs-renewal-cadence.schema.json",
  "type": "object",
  "properties": {
    "horizonMonths": {
      "type": "integer",
      "minimum": 3,
      "maximum": 24,
      "default": 12
    },
    "contractTypes": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 3
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "forecastingModel": {
      "type": "string",
      "enum": [
        "weighted",
        "commit-only",
        "confidence-score"
      ],
      "default": "weighted"
    }
  },
  "additionalProperties": false
}






