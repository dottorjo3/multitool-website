{
  "$id": "text-keyword-density.schema.json",
  "type": "object",
  "properties": {
    "text": {
      "type": "string",
      "minLength": 20,
      "errorMessage": "Incolla un testo di almeno 20 caratteri"
    },
    "minLength": {
      "type": ["integer", "string"],
      "pattern": "^[1-9][0-9]?$",
      "default": "3"
    },
    "top": {
      "type": ["integer", "string"],
      "pattern": "^[0-9]{1,3}$",
      "default": "20"
    }
  },
  "required": ["text"],
  "additionalProperties": false
}


