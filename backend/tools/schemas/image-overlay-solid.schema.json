{
  "$id": "image-overlay-solid.schema.json",
  "type": "object",
  "properties": {
    "color": {
      "type": "string",
      "pattern": "^#?([0-9a-fA-F]{6}|[0-9a-fA-F]{3})$",
      "default": "#1F2937"
    },
    "opacity": {
      "type": ["number", "string"],
      "pattern": "^(1(\\.0+)?|0(\\.\\d+)?)$",
      "default": "0.5"
    },
    "quality": {
      "type": ["integer", "string"],
      "pattern": "^[0-9]{1,3}$",
      "default": "85"
    }
  },
  "required": [],
  "additionalProperties": false
}


