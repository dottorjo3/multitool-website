{
  "$id": "data-json-pick-keys.schema.json",
  "type": "object",
  "properties": {
    "input": {
      "type": "string",
      "minLength": 1,
      "errorMessage": "Inserisci del JSON da modificare"
    },
    "keys": {
      "type": "string",
      "minLength": 1,
      "errorMessage": "Specifica le chiavi da mantenere (separate da virgola)"
    },
    "recursive": {
      "type": "string",
      "enum": ["true", "false"],
      "default": "false"
    }
  },
  "required": ["input", "keys"],
  "additionalProperties": false
}


