{
  "$id": "image-tint.schema.json",
  "type": "object",
  "properties": {
    "color": {
      "type": "string",
      "pattern": "^#?([0-9a-fA-F]{6}|[0-9a-fA-F]{3})$",
      "default": "#FF6B6B",
      "errorMessage": "Inserisci un colore HEX valido"
    },
    "quality": {
      "type": ["integer", "string"],
      "pattern": "^[0-9]{1,3}$",
      "default": "85"
    }
  },
  "required": [],
  "additionalProperties": false
}


