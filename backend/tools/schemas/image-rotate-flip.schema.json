{
  "$id": "image-rotate-flip.schema.json",
  "type": "object",
  "properties": {
    "rotation": {
      "type": ["integer", "string"],
      "pattern": "^-?[0-9]{1,3}$",
      "default": "0",
      "errorMessage": "Inserisci un angolo di rotazione valido"
    },
    "flipHorizontal": {
      "type": "string",
      "enum": ["true", "false"],
      "default": "false"
    },
    "flipVertical": {
      "type": "string",
      "enum": ["true", "false"],
      "default": "false"
    },
    "format": {
      "type": "string",
      "enum": ["", "jpeg", "jpg", "png", "webp", "avif"],
      "default": ""
    },
    "quality": {
      "type": ["integer", "string"],
      "pattern": "^[1-9][0-9]?$|^100$",
      "default": "90",
      "errorMessage": "La qualit√† deve essere tra 1 e 100"
    }
  },
  "required": [],
  "additionalProperties": false
}

