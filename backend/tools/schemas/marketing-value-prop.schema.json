{
  "$id": "marketing-value-prop.schema.json",
  "type": "object",
  "properties": {
    "product": {
      "type": "string",
      "minLength": 3,
      "errorMessage": "Specifica il prodotto."
    },
    "audience": {
      "type": "string",
      "minLength": 3,
      "errorMessage": "Indica il pubblico."
    },
    "advantage": {
      "type": "string",
      "minLength": 10,
      "errorMessage": "Descrivi il vantaggio distintivo (min 10 caratteri)."
    },
    "tone": {
      "type": "string",
      "enum": [
        "ispirazionale",
        "analitico",
        "diretto",
        "premium"
      ],
      "default": "ispirazionale"
    }
  },
  "required": [
    "product",
    "audience",
    "advantage"
  ],
  "additionalProperties": false
}
