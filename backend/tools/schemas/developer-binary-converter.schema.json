{
  "$id": "developer-binary-converter.schema.json",
  "type": "object",
  "properties": {
    "input": {
      "type": "string",
      "minLength": 1,
      "errorMessage": "Inserisci un numero da convertire"
    },
    "fromBase": {
      "type": "string",
      "pattern": "^([2-9]|1[0-9]|2[0-9]|3[0-6])$",
      "default": "10"
    },
    "toBase": {
      "type": "string",
      "pattern": "^([2-9]|1[0-9]|2[0-9]|3[0-9]|3[0-6])$",
      "default": "2"
    }
  },
  "required": ["input"],
  "additionalProperties": false
}


