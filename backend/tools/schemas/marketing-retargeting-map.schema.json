{
  "$id": "marketing-retargeting-map.schema.json",
  "type": "object",
  "properties": {
    "mainGoal": {
      "type": "string",
      "enum": [
        "conversion",
        "lead",
        "retention"
      ],
      "default": "conversion"
    },
    "audienceSize": {
      "type": "integer",
      "minimum": 100,
      "maximum": 1000000,
      "default": 5000
    },
    "platforms": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 2
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "additionalProperties": false
}









