{
  "$id": "image-shadow.schema.json",
  "type": "object",
  "properties": {
    "offsetX": {
      "type": ["integer", "string"],
      "pattern": "^-?[0-9]{1,4}$",
      "default": "20"
    },
    "offsetY": {
      "type": ["integer", "string"],
      "pattern": "^-?[0-9]{1,4}$",
      "default": "20"
    },
    "blur": {
      "type": ["integer", "string"],
      "pattern": "^[0-9]{1,4}$",
      "default": "30"
    },
    "spread": {
      "type": ["integer", "string"],
      "pattern": "^[0-9]{1,4}$",
      "default": "40"
    },
    "opacity": {
      "type": ["number", "string"],
      "pattern": "^(1(\\.0+)?|0(\\.\\d+)?)$",
      "default": "0.35"
    },
    "color": {
      "type": "string",
      "pattern": "^#?([0-9a-fA-F]{6}|[0-9a-fA-F]{3})$",
      "default": "#000000"
    },
    "quality": {
      "type": ["integer", "string"],
      "pattern": "^[0-9]{1,3}$",
      "default": "85"
    }
  },
  "required": [],
  "additionalProperties": false
}


