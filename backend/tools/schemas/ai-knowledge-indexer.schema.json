{
  "$id": "ai-knowledge-indexer.schema.json",
  "type": "object",
  "properties": {
    "sourceTypes": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 2
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "embeddingProvider": {
      "type": "string",
      "enum": [
        "openai",
        "anthropic",
        "cohere",
        "local"
      ],
      "default": "openai"
    },
    "refreshFrequency": {
      "type": "string",
      "enum": [
        "hourly",
        "daily",
        "weekly"
      ],
      "default": "daily"
    }
  },
  "additionalProperties": false
}









