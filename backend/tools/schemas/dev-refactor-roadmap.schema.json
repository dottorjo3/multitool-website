{
  "$id": "dev-refactor-roadmap.schema.json",
  "type": "object",
  "properties": {
    "areas": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 2
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "prioritizationModel": {
      "type": "string",
      "enum": [
        "ICE",
        "RICE",
        "WSJF"
      ],
      "default": "ICE"
    },
    "planningHorizon": {
      "type": "integer",
      "minimum": 1,
      "maximum": 12,
      "default": 3
    }
  },
  "additionalProperties": false
}









