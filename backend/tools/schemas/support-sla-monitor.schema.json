{
  "$id": "support-sla-monitor.schema.json",
  "type": "object",
  "properties": {
    "slaTargets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "metric": {
            "type": "string",
            "minLength": 3
          },
          "targetMinutes": {
            "type": "integer",
            "minimum": 1,
            "maximum": 10080
          }
        },
        "required": [
          "metric",
          "targetMinutes"
        ],
        "additionalProperties": false
      },
      "minItems": 1,
      "uniqueItems": false
    },
    "reportingCadence": {
      "type": "string",
      "enum": [
        "daily",
        "weekly",
        "monthly"
      ],
      "default": "weekly"
    },
    "escalationContacts": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 2
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "additionalProperties": false
}






