{
  "$id": "developer-xml-formatter.schema.json",
  "type": "object",
  "properties": {
    "input": {
      "type": "string",
      "minLength": 1,
      "errorMessage": "Inserisci del codice XML da formattare"
    },
    "indentSize": {
      "type": "string",
      "pattern": "^[1-9][0-9]*$",
      "default": "2"
    },
    "preserveNewlines": {
      "type": "string",
      "enum": ["true", "false"],
      "default": "true"
    }
  },
  "required": ["input"],
  "additionalProperties": false
}


