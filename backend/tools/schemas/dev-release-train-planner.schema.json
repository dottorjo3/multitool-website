{
  "$id": "dev-release-train-planner.schema.json",
  "type": "object",
  "properties": {
    "cadence": {
      "type": "string",
      "enum": [
        "weekly",
        "biweekly",
        "monthly"
      ],
      "default": "biweekly"
    },
    "trackCount": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10,
      "default": 3
    },
    "freezeWindowDays": {
      "type": "integer",
      "minimum": 0,
      "maximum": 7,
      "default": 2
    }
  },
  "additionalProperties": false
}









