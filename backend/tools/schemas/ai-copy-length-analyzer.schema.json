{
  "$id": "ai-copy-length-analyzer.schema.json",
  "type": "object",
  "properties": {
    "channel": {
      "type": "string",
      "enum": [
        "email",
        "landing",
        "social"
      ],
      "default": "email"
    },
    "targetLength": {
      "type": "integer",
      "minimum": 20,
      "maximum": 500,
      "default": 120
    },
    "tolerance": {
      "type": "integer",
      "minimum": 5,
      "maximum": 200,
      "default": 20
    }
  },
  "additionalProperties": false
}









